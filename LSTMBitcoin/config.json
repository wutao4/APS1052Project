{
    "data": {
        "filename": "btc_dataset.csv",
        "train_test_split": 0.8,
        "columns": [
            "Closing Price (USD)",
            "active_addresses",
            "hash_rate",
            "btc_left",
            "total_addresses",
            "difficulty",
            "total_fees",
            "fed_assets",
            "GLD",
            "IYE",
            "SLV",
            "SPY",
            "TLT",
            "UUP",
            "NYFed_inflation",
            "Google_popularity"
        ],
        "price_column": "Closing Price (USD)",
        "sequence_length": 21,
        "fut_steps": 5,
        "normalize": true
    },
    "training": {
        "epochs": 40,
        "batch_size": 16,
        "val_split":0.2
    },
    "model": {
        "type": "seq2seq",
        "loss": "mse",
        "optimizer": "adam",
        "save_dir": "saved_models",
        "layers": {
            "lstm": [
                {
                    "type": "LSTM",
                    "units": 100,
                    "seq_len": 21,
                    "num_features": 16,
                    "return_seq": true
                },
                {
                    "type": "dropout",
                    "dropout": 0.05
                },
                {
                    "type": "LSTM",
                    "units": 100,
                    "return_seq": true
                },
                {
                    "type": "LSTM",
                    "units": 100,
                    "return_seq": false
                },
                {
                    "type": "Dropout",
                    "dropout": 0.05
                },
                {
                    "type": "Dense",
                    "units": 1,
                    "activation": "linear"
                }
            ],
            "rnn": [
                {
                    "type": "SimpleRNN",
                    "units": 100,
                    "seq_len": 21,
                    "num_features": 16,
                    "return_seq": true
                },
                {
                    "type": "dropout",
                    "dropout": 0.05
                },
                {
                    "type": "SimpleRNN",
                    "units": 100,
                    "return_seq": true
                },
                {
                    "type": "SimpleRNN",
                    "units": 100,
                    "return_seq": false
                },
                {
                    "type": "Dropout",
                    "dropout": 0.05
                },
                {
                    "type": "Dense",
                    "units": 1,
                    "activation": "linear"
                }
            ],
            "seq2seq": [
                {
                    "type": "LSTM",
                    "units": 100,
                    "seq_len": 21,
                    "num_features": 16,
                    "return_seq": true
                },
                {
                    "type": "dropout",
                    "dropout": 0.05
                },
                {
                    "type": "LSTM",
                    "units": 100,
                    "return_seq": true
                },
                {
                    "type": "LSTM",
                    "units": 100,
                    "return_seq": true
                },
                {
                    "type": "Dropout",
                    "dropout": 0.05
                },
                {
                    "type": "TimeDistDense",
                    "activation": "linear"
                }
            ]
        },
        "checkpoint_params": {
            "monitor": "val_loss",
            "save_best_only": true,
            "verbose": 1
        },
        "reduce_lr_params": {
            "monitor": "val_loss",
            "factor": 0.1,
            "patience": 2,
            "verbose": 1
        },
        "early_stopping_params": {
            "monitor": "val_loss",
            "patience": 5,
            "verbose": 1
        }
    }
}
